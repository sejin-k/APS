<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Real_MainActivity">

    <ImageView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/title_logo"/>

    <ImageView
        android:id="@+id/PetView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/petTypeLayout"
        android:orientation="horizontal"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="반려동물 종류"
            android:textSize="15dp"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/petType"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="\?"
            android:textSize="15dp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/petKindLayout"
        android:orientation="horizontal"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="품종"
            android:textSize="15dp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/petKind"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="\?"
            android:textSize="15dp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:layout_margin="30dp">

        <Button
            android:id="@+id/btnDetect"
            android:layout_width="150dp"
            android:layout_height="52dp"
            android:background="@drawable/selector_type"
            android:text="내 반려동물 확인"/>
        <Button
            android:id="@+id/btnAR"
            android:layout_width="150dp"
            android:layout_height="52dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/selector_ar"
            android:text="AR 체험"/>
        <Button
            android:id="@+id/btnList"
            android:layout_width="150dp"
            android:layout_height="52dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/selector_list"
            android:text="제품 목록"/>
    </LinearLayout>

</LinearLayout>